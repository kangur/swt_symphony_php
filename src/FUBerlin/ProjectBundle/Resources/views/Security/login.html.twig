{% extends 'FUBerlinProjectBundle::base.html.twig' %}

{% block content %}
{% if error %}
    <div class="alert alert-error">{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" class="form-signin" method="post">
    <h2 class="form-signin-heading">Please sign in</h2>
    <input value="{{ last_username }}" name="_username" type="text" placeholder="Username" class="input-block-level">
    <input type="password" name="_password" placeholder="Password" class="input-block-level">
    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <button type="submit" class="btn btn-large btn-primary">
        login
    </button>
</form>

{% endblock %}